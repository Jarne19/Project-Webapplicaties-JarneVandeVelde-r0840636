@model Player
@{
    ViewData["Title"] = "Speler aanpassen";
}
<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Index">
                            <span data-feather="home"></span>
                            Admin
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            Team Toevoegen
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="AddPlayer" class="nav-link">
                            Speler Toevoegen
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            Sponsor Toevoegen
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            Team Verwijderen/Updaten
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="EditOrDeletePlayer" class="nav-link">
                            Player Verwijderen/Updaten
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            Sponsor Verwijderen/Updaten
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 jumbotron-img2">
            <div class=" pt-3 pb-2 m-5 shadoww">
                <h3 class="mb-5 display-4">Speler aanpassen</h3>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.PlayerId)
                    <div class="form-row">
                        <div class="form-group col-md-6 ">
                            <label asp-for="Firstname">Voornaam</label>
                            <input asp-for="Firstname" class="form-control">
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                            <br />
                            <label asp-for="Name">Naam</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Age">Leeftijd</label>
                            <input asp-for="Age" class="form-control">
                            <span asp-validation-for="Age" class="text-danger"></span>
                            <br />
                            <label asp-for="Birthdate">Geboortedatum</label>
                            <input asp-for="Birthdate" type="date" class="form-control">
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PastDetails">Details over het verleden</label>
                            <textarea asp-for="PastDetails" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="PastDetails" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="BestLeg">Beste been</label>
                            <select asp-for="BestLeg" class="form-control">
                                <option selected>Kies...</option>
                                <option>Links</option>
                                <option>Rechts</option>
                            </select>
                            <span asp-validation-for="BestLeg" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="submit" value="EditPlayer" title="Aanpassen" name="Aanpassen" class="btn btn-danger" />
                }
            </div>
        </main>
    </div>
</div>

@section Scripts
{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}