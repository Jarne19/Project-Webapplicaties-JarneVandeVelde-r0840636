@model Project_Webapplicaties.ViewModels.GameListViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron jumbotron-img2">
    <div class="container">
        <div class="text-center">
            <img class="rounded" src="Images/LogoVwGerheide.png" height="150" />
        </div>
        <h3 class="text-center display-3 nav-text mt-3">Welkom bij Vw Geheide</h3>
    </div>
</div>
<div class="container">
    <h3 class="text-center mb-2 display-4">Wedstrijden</h3>
    <div class="row">
        @foreach (var item in Model.GetGames())
            {
                <div class="col-6 mt-3">
                    <div class="card text-center shadow">
                        <div class="card-header color nav-text">
                            @item.PlayDate
                        </div>
                        <table class="table mt-3 table-bordered ">
                            <tbody>
                            <tr>
                                <td >
                                    -
                                    <br/>
                                    <b>@Html.DisplayFor(modelItem => item.Team.Name)</b>
                                </td>
                                <td style="width: 260px">
                                    -
                                    <br/>
                                    <b>@item.AwayTeam</b>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="card-footer footer-color ">
                            <a class="nav-text" asp-controller="Game" asp-action="Details" asp-route-id="@item.GameId" ><b>MatchDetails</b></a>
                        </div>
                    </div>
                </div>
            }
    </div>
        <div class="text-center"><a asp-controller="Game" asp-action="Index" type="button" class="btn btn-danger mt-4 nav-text">Meer wedstrijden</a></div>
</div>
<div class="jumbotron footer-color mt-4">
    <div class="container ">
        <h3 class="text-center mb-3 nav-text display-4">Teams</h3>
        <div class="row">
            @foreach (var item in @Model.GetTeams())
            {
                <div class="col-sm m-2 mb-5">
                    <div class="card shadow" style="width: 20rem;">
                        <img src="~/Images/Team.jpg" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title"><b>@item.Name</b></h5>
                            <p class="card-text">@item.Division</p>
                            <hr />
                            <a class="btn btn-danger" asp-controller="Team" asp-action="Details" asp-route-id="@item.TeamId">Ploeg bekijken</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center"><a type="button" asp-controller="Team" asp-action="Index" class="btn btn-danger  nav-text">Meer teams bekijken</a></div>
    </div>
</div>
