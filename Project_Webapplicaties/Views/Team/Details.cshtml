@model Project_Webapplicaties.ViewModels.TeamDetailsViewModel
@{
    ViewData["Title"] = $"{Model.Name}";
}
<div class="jumbotron-img2">
    <div class="container shadoww">
        <div class="row">
            <div class="col-6">
                <h3 class="mb-3 display-4">@Model.Name</h3>
                <h5>@Model.Division</h5>
                <a class="btn btn-danger mt-4" asp-controller="Team" asp-action="Index">Terug naar teams</a><br/>
                <a class="btn btn-danger mt-4" asp-controller="Team" asp-action="GamesPerTeam" asp-route-id="@Model.TeamId">Wedstrijden bekijken van @Model.Name</a>
            </div>
            <div class="col-5 shadoww mr-2">
                <img src="~/Images/PloegFoto2.jpg" class="card-img-top" alt="..." height="300">
            </div>
        </div>

        <h4 class="mt-6">Spelers van @Model.Name</h4>
        <div class=" mt-4">
            <h4 class="text-center mt-4">Keepers</h4>
            <hr/>
            <div class="row">
                @foreach (var item in Model.GetKeepers())
                {
                    <div class="col-sm m-2 mb-5">
                        <div class="card shadow" style="width: 18rem;">
                            <img src="~/Images/Player.jpg" class="card-img-top" alt="..." height="250">
                            <div class="card-body">
                                <h5 class="card-title"><b>@item.Firstname @item.Name</b><br /> @item.GetAge() Jaar</h5>
                                <p class="card-text">@item.Position</p>
                                <hr />
                                <a class="btn btn-danger" asp-controller="Player" asp-action="Details" asp-route-id="@item.PlayerId">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <h4 class="text-center mt-4">Verdedigers</h4>
            <hr/>
            <div class="row">
                @foreach (var item in Model.GetVerdedigers())
                {
                    <div class="col-sm m-2 mb-5">
                        <div class="card shadow" style="width: 18rem;">
                            <img src="~/Images/Player.jpg" class="card-img-top" alt="..." height="250">
                            <div class="card-body">
                                <h5 class="card-title"><b>@item.Firstname @item.Name</b><br/> @item.GetAge() Jaar</h5>
                                <p class="card-text">@item.Position</p>
                                <hr/>
                                <a class="btn btn-danger" asp-controller="Player" asp-action="Details" asp-route-id="@item.PlayerId">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <h4 class="text-center mt-4">Middenvelders</h4>
            <hr/>
            <div class="row">
                @foreach (var item in Model.GetMiddenvelders())
                {
                    <div class="col-sm m-2 mb-5">
                        <div class="card shadow" style="width: 18rem;">
                            <img src="~/Images/Player.jpg" class="card-img-top" alt="..." height="250">
                            <div class="card-body">
                                <h5 class="card-title"><b>@item.Firstname @item.Name</b><br/> @item.GetAge() Jaar</h5>
                                <p class="card-text">@item.Position</p>
                                <hr/>
                                <a class="btn btn-danger" asp-controller="Player" asp-action="Details" asp-route-id="@item.PlayerId">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <h4 class="text-center mt-4">Aanvallers</h4>
            <hr/>
            <div class="row">
                @foreach (var item in Model.GetAanvallers())
                {
                    <div class="col-sm m-2 mb-5">
                        <div class="card shadow" style="width: 18rem;">
                            <img src="~/Images/Player.jpg" class="card-img-top" alt="..." height="250">
                            <div class="card-body">
                                <h5 class="card-title"><b>@item.Firstname @item.Name</b><br/> @item.GetAge() Jaar</h5>
                                <p class="card-text">@item.Position</p>
                                <hr/>
                                <a class="btn btn-danger" asp-controller="Player" asp-action="Details" asp-route-id="@item.PlayerId">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

